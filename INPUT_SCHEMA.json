{
    "title": "Local Business Lead Miner Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "searchTerms": {
            "title": "Search Terms",
            "type": "array",
            "description": "Array of search queries (e.g., 'Plumbers in New York', 'Dentists in London')",
            "editor": "stringList",
            "items": {
                "type": "string"
            },
            "prefill": ["Plumbers in New York", "Dentists in London"]
        },
        "maxItems": {
            "title": "Maximum Items",
            "type": "integer",
            "description": "Maximum number of business results to scrape per search term",
            "default": 100,
            "minimum": 1,
            "maximum": 500
        },
        "proxyConfiguration": {
            "title": "Proxy Configuration",
            "type": "object",
            "description": "Apify Proxy configuration (mandatory for anti-blocking)",
            "editor": "proxy",
            "default": {
                "useApifyProxy": true,
                "apifyProxyGroups": ["RESIDENTIAL"]
            },
            "prefill": {
                "useApifyProxy": true,
                "apifyProxyGroups": ["RESIDENTIAL"]
            }
        },
        "includeWebsite": {
            "title": "Include Website URL",
            "type": "boolean",
            "description": "Extract website URLs (may require clicking into detail pages)",
            "default": true
        },
        "includePhone": {
            "title": "Include Phone Number",
            "type": "boolean",
            "description": "Extract phone numbers (may require clicking into detail pages)",
            "default": true
        },
        "scrollDelay": {
            "title": "Scroll Delay (ms)",
            "type": "integer",
            "description": "Delay between scroll actions to load more results",
            "default": 2000,
            "minimum": 500,
            "maximum": 5000
        }
    },
    "required": ["searchTerms", "maxItems", "proxyConfiguration"]
}
